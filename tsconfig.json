{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2018",
      "dom" // 添加 dom 支持
    ],
    "module": "esnext",
    "declaration": true, // 生成 .d.ts 文件
    "declarationDir": "./dist", // 输出到 dist 目录
    "emitDeclarationOnly": false, // 同时输出 js 和 .d.ts
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ],
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}